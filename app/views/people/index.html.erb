<h1>Listing people</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Lastname</th>
	<th>Household</th>
    <th>Child</th>
    <th>Have rspv</th>
    <th>Rspv</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.first_name %></td>
    <td><%= person.lastname %></td>
	<td><%= find_household_name(person.household_id)%>
	<td><%= find_side(person.household_id)%></td>
    <td><%= humanize_boolean(person.child) %></td>
    <td><%= person.have_rspv %></td>
    <td><%= person.rspv %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

